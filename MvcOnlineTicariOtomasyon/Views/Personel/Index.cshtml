@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Personel ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Personelid</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td>
                <img src="@item.PersonelGorsel" style="width: auto; height:100px" />
            </td>
            <td>@item.Departman.DepartmanAd</td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@item.Personelid" class="btn btn-success">Detaylar</a>
                <a href="/Personel/PersonelGetir/@item.Personelid" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>
    }
</table>

